<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/webStoreIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginVertical="@dimen/spacing_xs"
        android:layout_marginStart="@dimen/spacing_xxs"
        app:round="16dp"
        android:background="@color/color_white"
        android:elevation="@dimen/elevation_12"
        android:padding="6dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/webStoreName"
        style="@style/Body.Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_s"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_text_primary"
        app:layout_constraintBottom_toTopOf="@id/webStoreUrl"
        app:layout_constraintEnd_toStartOf="@id/arrowNext"
        app:layout_constraintStart_toEndOf="@id/webStoreIcon"
        app:layout_constraintTop_toTopOf="@id/webStoreIcon"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Carrefour" />

    <TextView
        android:id="@+id/webStoreUrl"
        style="@style/SmallText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_s"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_text_tertiary"
        app:layout_constraintBottom_toBottomOf="@id/webStoreIcon"
        app:layout_constraintEnd_toStartOf="@id/arrowNext"
        app:layout_constraintStart_toEndOf="@id/webStoreIcon"
        app:layout_constraintTop_toBottomOf="@id/webStoreName"
        tools:text="https//abcdresdgjsdflkgodfkl" />

    <ImageView
        android:id="@+id/arrowNext"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginVertical="@dimen/spacing_s"
        app:layout_constraintBottom_toTopOf="@id/bottom_separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/color_red" />


    <View
        android:id="@+id/bottom_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_purple_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
